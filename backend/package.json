{
    "name": "backend",
    "version": "1.0.0",
    "description": "TwS service main backend application",
    "main": "src/server.js",
    "type": "module",
    "scripts": {
        "start": "NODE_ENV=development DOTENV_CONFIG_PATH=config/.env.development nodemon -r dotenv/config src/server.js",
        "test": "DOTENV_CONFIG_PATH=config/.env.test mocha --require dotenv/config --exit",
        "test:coverage": "DOTENV_CONFIG_PATH=config/.env.test nyc mocha"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/aMountainRam/project_tws.git"
    },
    "author": "Umberto Toniolo",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/aMountainRam/project_tws/issues"
    },
    "homepage": "https://github.com/aMountainRam/project_tws#readme",
    "dependencies": {
        "bcrypt": "^5.0.1",
        "chai-as-promised": "^7.1.1",
        "cors": "^2.8.5",
        "dotenv": "^9.0.2",
        "express": "^4.17.1",
        "http-status-codes": "^2.1.4",
        "log4js": "^6.3.0",
        "mongoose": "^5.12.10"
    },
    "devDependencies": {
        "chai": "^4.3.4",
        "mocha": "^8.4.0",
        "node-mocks-http": "^1.10.1",
        "nodemon": "^2.0.7",
        "nyc": "^15.1.0",
        "sinon": "^10.0.0"
    },
    "nyc": {
        "all": true,
        "check-coverage": true,
        "include": [
            "src/**/*.js"
        ],
        "exclude": [
            "test/**/*.js"
        ],
        "reporter": [
            "html",
            "text",
            "lcov"
        ],
        "require": [
            "dotenv/config"
        ]
    },
    "mocha": {
        "diff": true,
        "extension": [
            "js"
        ],
        "package": "./package.json",
        "reporter": "spec",
        "slow": "2000",
        "ui": "bdd",
        "watch-files": [
            "test/**/*.js"
        ],
        "watch-ignore": [
            "lib/vendor"
        ],
        "timeout": "60000",
        "recursive": true
    }
}
